<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DarrenBlog</title>
    <link href="~/lib/bootstrap-4.2.1-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/website.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/poper/popper.min.js"></script>
    <script src="~/lib/bootstrap-4.2.1-dist/js/bootstrap.min.js"></script>
    <script src="~/js/siteInit.js"></script>

</head>
<body>
    <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark mb-4">
        <span class="navbar-brand mb-0 h1">DF.Blog</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Web.Mvc</p>
        </footer>
    </div>
</body>
</html>
